{
    "extends": "airbnb-base",
    "plugins": [
        "import",
        "react"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "comma-dangle": [
            "warn",
            "always-multiline"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-plusplus": [
            "warn",
            { "allowForLoopAfterthoughts": true }
        ]
    }
}
